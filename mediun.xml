<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
	android:background="@drawable/backice"
	>
	<TextView
	    android:id="@+id/text_score2"
	    android:layout_centerHorizontal="true"
	    android:layout_width="180dip"
	    android:layout_height="40dip"
	    android:textSize="30sp"
	    android:text="score	:"
	    />
	<Button
	    android:id="@+id/btn_mediumtohard"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="40dip"
	    android:layout_centerHorizontal="true"
	    android:text="到下一關"
	    />
	<TextView
	    android:id="@+id/text_time2"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="30sp"
	    android:text="剩餘時間:"/>
	<TextView
	    android:id="@+id/text_timenum2"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="40dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="30sp"
	    android:textColor="#000000"
	    android:text="40"/>
	<TextView
	    android:id="@+id/text_number2"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/text_score2"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="120dip"
	    android:layout_width="wrap_content"
	    android:layout_height="40dip"
	    android:textSize="30sp"
	    android:text="0"
	    />
	<ImageView
	    android:id="@+id/image3"
	    android:layout_width="80dip"
	    android:layout_height="80dip"
	    android:src="@drawable/image_race" />

</RelativeLayout>