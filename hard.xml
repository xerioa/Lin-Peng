<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
	android:background="@drawable/backfire"
	>
	<TextView
	    android:id="@+id/text_score3"
	    android:layout_centerHorizontal="true"
	    android:layout_width="180dip"
	    android:layout_height="40dip"
	    android:textColor="#FFFFFF"
	    android:textSize="30sp"
	    android:text="score	:"
	    />
	<TextView
	    android:id="@+id/text_time3"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#FFFFFF"
	    android:textSize="30sp"
	    android:text="剩餘時間:"/>
	<TextView
	    android:id="@+id/text_timenum3"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="40dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="30sp"
	    android:textColor="#FFFFFF"
	    android:text="40"/>
	<TextView
	    android:id="@+id/text_number3"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/text_score3"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="120dip"
	    android:layout_width="wrap_content"
	    android:layout_height="40dip"
	    android:textColor="#FFFFFF"
	    android:textSize="30sp"
	    android:text="0"
	    />
	<ImageView
	    android:id="@+id/image5"
	    android:layout_width="80dip"
	    android:layout_height="80dip"
	    android:src="@drawable/image_race" />
	<ImageView
	    android:id="@+id/image6"
	    android:layout_width="80dip"
	    android:layout_height="80dip"
	    android:src="@drawable/image_race" />
	


</RelativeLayout>